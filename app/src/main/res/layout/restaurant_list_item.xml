<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="?selectableItemBackground"
    android:padding="16dp">

    <ImageView
        android:id="@+id/restaurant_list_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerInside"
        tools:src="@drawable/ic_type_restaurant"/>

    <TextView
        android:id="@+id/restaurant_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginStart="72dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
        android:maxLines="1"
        tools:text="Super Wok"/>

    <TextView
        android:id="@+id/restaurant_list_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_alignLeft="@id/restaurant_list_title"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@id/restaurant_list_title"
        tools:text="500m"/>

</RelativeLayout>